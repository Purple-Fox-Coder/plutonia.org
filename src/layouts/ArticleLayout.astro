---
const {
  title,
  description,
  image,
} = Astro.props;
import BaseLayout from "./BaseLayout.astro"
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout>
  <NavBar />

  <div class="mainBody">
    <h1>{title}</h1>
    <p>{description}</p>
    {image && (
      <div class="card">
        <img
          src={image}
          alt={`${title} logo`}
          class="imageIn"
          width="128"
          height="128"
        />
      </div>
    )}
    <slot />
  </div>

  <Footer />
</BaseLayout>
